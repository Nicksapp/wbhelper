{{#if isInit}}
/**
 * Controller
 * 类名：{{facadeName}}
 */
import { Controller } from 'egg';

export default class {{className}}Controller extends Controller {
  
  {{#each data}}
  /* {{name}} */
  /* wbneicontrol: on */
  async {{path}}() {
    {{#if inputParams.length}}
    const {
      {{#each inputParams}}{{name}}{{#if @last}}{{else}}, {{/if}}{{/each}}
    } = this.ctx.query;
    
    {{/if}}
    this.ctx.body = await this.ctx.service.{{#if ../prefixName}}{{../prefixName}}.{{/if}}{{../className}}.{{path}}{{#if inputParams.length}}(
      {{#each inputParams}}{{name}}{{#if @last}}{{else}}, {{/if}}{{/each}}
    ){{else}}(){{/if}};
  }

  {{/each}}

}
{{else}}
  {{#if isMethodInit}}

  /* {{name}} */
  /* wbneicontrol: on */
  async {{path}}() {
    {{#if inputParams.length}}
    const {
      {{#each inputParams}}{{name}}{{#if @last}}{{else}}, {{/if}}{{/each}}
    } = this.ctx.query;

    {{/if}}
    this.ctx.body = await this.ctx.service.{{#if ../prefixName}}{{../prefixName}}.{{/if}}{{className}}.{{path}}{{#if inputParams.length}}(
        {{#each inputParams}}{{name}}{{#if @last}}{{else}}, {{/if}}{{/each}}
    ){{else}}(){{/if}};
  }
  {{else}}
async {{path}}() {
    {{#if inputParams.length}}
